[user]
    name = Zamith
    email = luis@zamith.pt
    signingkey = 28FE3B16
[alias]
    ap = add -p
    br = checkout -b
    cb = symbolic-ref HEAD --short
    co = checkout
    conflicts = diff --name-only --diff-filter=U
    ct = commit -v
    delete = branch -D
    ff = !git fetch && git wtf
    ia = add --intent-to-add -A
    lg = log --color --graph --date=short --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(blue)[%an]%Creset %GS' --abbrev-commit
    logm = !git lg --first-parent master
    logme = !git lg --author=zamith
    mt = mergetool
    rba = rebase --abort
    rbc = rebase --continue
    rbs = rebase --skip
    rh = reset --hard
    today = log --since=midnight --author='Zamith' --oneline
    uncommit = reset --soft HEAD^
    unstage = reset
    week = lg --since @{1.week.ago}
[push]
    default = current
[color]
    ui = true
[core]
    editor = nvim
    pager = diff-so-fancy | less --tabs=1,5 -RFX
[mergetool "vimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\" \"$MERGED\" -c 'wincmd w' -c 'wincmd J'"
[mergetool]
    prompt = false
    keepBackup = false
    trustExitCode = false
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
    compactionHeuristic = true
[blame]
    date = short
[help]
    autocorrect = 1
[apply]
    whitespace = nowarn
[interactive]
    singlekey = true
[rerere]
    enabled = true
[commit]
    template = ~/.gitmessage
[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22
[credential]
    helper = osxkeychain
[credential "https://github.com"]
    username = zamith
[init]
	templatedir = ~/.git-templates
	defaultBranch = master
[grep]
	extendedRegexp = true
