[user]
    name = Zamith
    email = zamith.28@gmail.com
    signingkey = 28FE3B16
[alias]
    br = checkout -b
    cb = symbolic-ref HEAD --short
    co = checkout
    conflicts = diff --name-only --diff-filter=U
    ct = commit -v
    delete = branch -D
    ff = !git fetch && git wtf
    ia = add --intent-to-add -A
    lg = log --color --graph --date=short --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(blue)[%an]%Creset %GS' --abbrev-commit
    logm = !git lg --first-parent master
    logme = !git lg --author=zamith
    mt = mergetool
    rba = rebase --abort
    rbc = rebase --continue
    rbs = rebase --skip
    rh = reset --hard
    today = log --since=midnight --author='Zamith' --oneline
[push]
    default = current
[color]
    ui = true
[core]
    editor = vim
[mergetool "vimdiff"]
    cmd = vimdiff -f $LOCAL $MERGED $REMOTE
[mergetool]
    prompt = false
    keepBackup = false
    trustExitCode = false
[merge]
    tool = vimdiff
[diff]
    tool = vimdiff
[blame]
    date = short
[help]
    autocorrect = 1
[apply]
    whitespace = nowarn
[interactive]
    singlekey = true
[commit]
    gpgsign = true
[rerere]
    enabled = true
